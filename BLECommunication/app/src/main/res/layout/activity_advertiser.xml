<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Activity.MainActivity">

    <Switch
            android:id="@+id/swc_broadcast_1m"
            android:text="Broadcast 1M PHY  BLE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <Switch
            android:id="@+id/swc_broadcast_2m"
            android:text="Broadcast 2M PHY  BLE"
            android:enabled="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/txtServiceUUID"
            android:text="Service UUID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/txtServiceKEY"
            android:text="Service KEY"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/txtServiceCNT"
            android:text="Service CNT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
</LinearLayout>